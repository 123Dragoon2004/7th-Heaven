<Window x:Class="Installer.Uninstall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="7th Uninstall Wizard" Height="237" Width="330">
    <Grid Background="#FF252525">
        <Image Grid.Column="0" HorizontalAlignment="Left" Height="100" Margin="27,10,0,0" VerticalAlignment="Top" Width="100" Source="/Assets/7thheaven.png"/>
        <Label Content="Uninstaller" HorizontalAlignment="Left" Margin="133,60,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Segoe UI" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="UninstallBtn" Click="UninstallBtn_Click"  Content="Uninstall" HorizontalAlignment="Left" Margin="119,133,0,0" Padding="8,8,8,8" VerticalAlignment="Top" Foreground="White" BorderBrush="#FF676767" Background="#FF383838" FontWeight="Bold"/>
        <Label HorizontalAlignment="Left" Margin="0,172,0,0" VerticalAlignment="Top" Foreground="#FF424242">
            <Hyperlink Foreground="#FF424242" NavigateUri="https://www.tsunamods.com/" RequestNavigate="Hyperlink_RequestNavigate">Tsunamods built Installer</Hyperlink>
        </Label>
    </Grid>
</Window>
